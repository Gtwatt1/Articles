<strong>Listing articles</strong> 

<%= link_to "New Article", new_article_path %>
<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Link</th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title%></td>
            <td><%= article.text%></td>
            <td><%= link_to 'show', article_path(article) %></td>
            <td><%= link_to 'edit', edit_article_path(article) %></td>

        </tr>
    <%end %>
</table>